extends ../layout/index

block contenido
    input(type="hidden" name="_csrf" value=csrfToken)
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-action Bienes 
            span.font-normal.text-primaryText Raices
        h2.text-center.text-2xl.font-extrabold= page
        
            .py-10
                if confirmacion 
                    span.text-xl.font-bold.text-center.my-10 Hemos enviado un correo a: 
                    span.text-xl.font-bold.text-action= msg
                    span.text-xl.font-bold.text-center.my-10 , para la confirmación de la cuenta
                else 
                    span.text-xl.font-bold.text-center.my-10 Hemos enviado un email con las instrucciones a: 
                    span.text-xl.font-bold.text-action= msg
                    span.text-xl.font-bold.text-center.my-10 , para la recuperación de la cuenta