extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-action Bienes 
            span.font-normal.text-primaryText Raices
        h2.text-center.text-2xl.font-extrabold= page

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-error.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.fade-error!= error.msg

        .mt-8.mx-auto.max-w-lg
            .bg-bgg.py-8.px-6.rounded-md.shadow-md
                form(method="POST" novalidate).space-y-5.px-6
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="password") Coloca tu nuevo Password
                        input#passwordl.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Escribe tu nuevo password" type="password" name="password" required)
                    div 
                        div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="confirm_password") Repetir Contraseña
                        input.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu nueva contraseña" type="password" name="confirm_password" required)

                    input(class="w-full bg-action hover:bg-hoverAction text-white font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Guardar password")
                    

    if errores
        style.
            .fade-error {
                transition: opacity 1s ease-in-out;
            }
        script.
            setTimeout(function() {
                const errorMessages = document.querySelectorAll('.fade-error');
                errorMessages.forEach((message, index) => {
                    setTimeout(() => {
                        message.style.opacity = '0'; 
                        setTimeout(() => {
                            message.style.display = 'none'; 
                        }, 1000); 
                    }, index * 2000); 
                });
            }, 1500); 