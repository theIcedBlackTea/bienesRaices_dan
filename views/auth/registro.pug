extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-action Bienes 
            span.font-normal.text-primaryText Raíces  
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-formBackground.py-8.px-4.shadow-md
                form.space-y-5(method="POST" action="/auth/registro" novalidate)
                    input(type="hidden" name="_csrf" value= csrfToken) 
                    div 
                        label.block.text-sm.uppercase.text-secondayText.mb-3.font-bold(for="nombre") Tu Nombre
                        input#nombre.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Escribe tu nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div 
                        label.block.text-sm.uppercase.text-secondaryText.mb-3.font-bold(for="email") Email de Registro
                        input#email.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Escribe tu email" type="email" name="email" value= usuario ? usuario.email : '' ) 
                    div 
                        label.block.text-sm.uppercase.text-secondaryText.mb-3.font-bold(for="birthDate") Fecha de Nacimiento
                        input#birthDate.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(type="date" name="birthDate" value= usuario ? usuario.birthDate : '' ) 
                    div 
                        label.block.text-sm.uppercase.text-secondaryText.mb-3.font-bold(for="password") Password
                        input#password.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Escribe tu password" type="password" name="password" )        
                    div 
                        label.block.text-sm.uppercase.text-secondaryText.mb-3.font-bold(for="repetir_password") Repetir password
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu password" type="password" name="repetir_password")         
                    
                    div.flex.items-center.justify-between 
                        a.text-sm.text-secondayText(href="/auth/login" class="hover:text-action hover:underline") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-sm.text-secondayText(href="/auth/olvide-password" class="hover:text-action hover:underline") Olvide mi Password 

                    input(class="w-full bg-action hover:bg-hoverAction text-white font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")    
