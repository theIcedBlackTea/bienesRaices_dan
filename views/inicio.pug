extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 
    div(class="py-5")
        h1(class="text-center text-3xl font-bold") Ubicaci√≥n en el Mapa

        div(class="flex flex-col md:flex-row items-center py-10")
            h2(class="text-sm uppercase text-gray-800 font-bold mr-10") Filtrar Propiedades

            div(class="w-full md:w-auto flex items-center")    
                label(for="categorias" class="text-sm w-24 uppercase text-gray-500 font-bold") Categorias
                select(id="categorias" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow mr-10") 
                    option(value="") Sin especificar
                    each categoria in categorias 
                        option(value=categoria.id)= categoria.nombre 

            div(class="w-full md:w-auto flex items-center")
                label(for="precios" class="text-sm w-24 uppercase text-gray-500 font-bold") Precios 
                select(id="precios" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow") 
                    option(value="") Sin especificar 
                    each precio in precios 
                        option(value=precio.id)= precio.nombre 

        div(id="mapa-inicio" class="h-[600px] mt-5 rounded-xl" )

        section(class="py-5")
            h2(class="text-center text-3xl font-bold pt-10") Casas disponibles

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in casas
                    if propiedad.publicado
                        include ./templates/card

        section(class="py-5")
            h2(class="text-center text-3xl font-bold pt-10") Departamentos disponibles 

            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in departamentos
                    if propiedad.publicado
                        include ./templates/card

block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js")